<%include header%>
    <form method="post" action="/blog/update" enctype="multipart/form-data">
        <input name="postid" type="hidden" value='<%= post._id   %>'/>
        <div class="form-group">
            <label>Title:</label>
            <input name="title" type="text" class="form-control" value='<%= post.title %>'/>
        </div>
        <div class="form-group">
            <label>Category:</label>
            <input name="category" type="text" class="form-control" value='<%= post.category %>'/>
        </div>
        <div class="form-group">
                <label>Body:</label>
                <textarea name="body" id="body" class="form-control"><%= post.body%></textarea>
        </div>
        <!--<div class="form-group">-->
            <!--<label>Main Image:</label>-->
            <!--<input name="mainimage" type="file" class="form-control" value='<%= post.mainimage %>'/>-->
        <!--</div>-->
        <div class="form-group">
            <label>Author:</label>
            <input name="author" type="text" class="form-control" value='<%= post.author %>'/>
        </div>
        <div class="form-group">
            <label>Image:</label>
            <input name="mainimage" type="file" class="form-control"/>
        </div>
        <input name="submit" type="submit" value="Update" class="btn btn-default"/>
    </form>
<footer>
    <p>Blog &copy; 2016</p>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.2/jquery.min.js"></script>
    <script src="/ckeditor/ckeditor.js"></script>
    <script>CKEDITOR.replace('body');</script>
    <!--<script>CKEDITOR.instances['body'].setData(" "+"<%= post.body%>");</script>-->

</footer>
</div>
</body>
</html>
